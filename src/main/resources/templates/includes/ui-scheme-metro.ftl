<#assign tableBorder_rbl>border-right:1px solid ${tableBorder_color};border-bottom:1px solid ${tableBorder_color};border-left:1px solid ${tableBorder_color};</#assign>

<#assign border_trl>border-right:1px solid ${border_color};border-top:1px solid ${border_color};border-left:1px solid ${border_color};</#assign>
<#assign borderLight_trl>border-right:1px solid ${borderLight_color};border-top:1px solid ${borderLight_color};border-left:1px solid ${borderLight_color};</#assign>

<#assign border_rl>border-right:1px solid ${border_color};border-left:1px solid ${border_color};</#assign>
<#assign borderLight_rl>border-right:1px solid ${borderLight_color};border-left:1px solid ${borderLight_color};</#assign>
<#assign tableBorder_rl>border-right:1px solid ${tableBorder_color};border-left:1px solid ${tableBorder_color};</#assign>

<#assign border_tb>border-top:1px solid ${border_color};border-bottom:1px solid ${border_color};</#assign>
<#assign borderLight_tb>border-top:1px solid ${borderLight_color};border-bottom:1px solid ${borderLight_color};</#assign>

<#assign border_t>border-top:1px solid ${border_color}</#assign>
