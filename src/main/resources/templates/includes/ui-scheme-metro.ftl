<#-- decoration settings -->

<#assign bodyAttr>link="#4D84B2" alink="#EE9300" vlink="#4D84B2" bgcolor="#E3E3E3" topmargin="0" leftmargin="0"</#assign>

<#assign titleStyle>background:#315973;font:13px tahoma,sans-serif;color:#ffffff;</#assign>
<#assign titleStyle_big>font-size:16px;</#assign>

<#assign titleDateTableStyle>border:none;background:#ffffff;font:14px tahoma,sans-serif;color:#666666;</#assign>
<#assign titleDateYearStyle>background:#ffa200;color:#ffffff;font-size:15px;font-weight: bold;</#assign>


<#assign titleCell>padding:3px 5px;font-size:13px;font-family:tahoma,sans-serif;font-size:13px;</#assign>
<#assign titleCell_small>font-size:10px;</#assign>
<#assign titleCell_big>font-size:16px;</#assign>
<#assign bodyCell>padding:5px;font-family:tahoma,sans-serif;font-size:12px;background:#ffffff;</#assign>
<#assign bodyCell_big>font-size:14px;</#assign>

<#assign error>font-family:tahoma,sans-serif;margin:0;text-align:center;color:#333333;</#assign>
<#assign errorTitle>font-size:24px;padding:5px 0;</#assign>
<#assign errorMessage>font-size:14px;background:#ffffff;padding:10px 0;</#assign>


<#assign titleClear_color>#a8c9df</#assign>
<#assign titleShade_color>#97bed8</#assign>


<#assign colClear_rowEven_color>#ffffff</#assign>
<#assign colShade_rowEven_color>#eff5f9</#assign>

<#assign colClear_rowOdd_color>#f3f3f3</#assign>
<#assign colShade_rowOdd_color>#e5eff5</#assign>


<#assign tableBorder_color>#315973</#assign>
<#assign border_color>${titleShade_color}</#assign>
<#assign borderLight_color>${titleClear_color}</#assign>


<#assign titleClear>background:${titleClear_color};color:#ffffff;</#assign>
<#assign titleShade>background:${titleShade_color};color:#ffffff;</#assign>

<#assign colClear_rowEven>background:${colClear_rowEven_color};</#assign>
