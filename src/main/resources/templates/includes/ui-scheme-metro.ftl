<#assign colClear_rowOdd>background:${colClear_rowOdd_color};</#assign>
<#assign colShade_rowOdd>background:${colShade_rowOdd_color};</#assign>

<#assign border_clear>border:none;</#assign>
<#assign border_all>border:1px solid ${border_color};</#assign>
<#assign borderLight_all>border:1px solid ${borderLight_color};</#assign>

<#assign border_rbl>border-right:1px solid ${border_color};border-bottom:1px solid ${border_color};border-left:1px solid ${border_color};</#assign>
